<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="mainScreenButtons" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">@dimen/main_button_text_size</item>
        <item name="cornerRadius">@dimen/main_button_corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/dark</item>
    </style>

    <style name="settingsButtonText" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_item_height</item>
        <item name="android:textSize">@dimen/settings_item_text_size</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/settings_button_background</item>
        <item name="iconGravity">end</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="iconTint">@color/settings_icon_color</item>
        <item name="iconSize">24dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

</resources>